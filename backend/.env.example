# 诗鉴后端服务环境变量配置示例
# 复制此文件为 .env 并填写实际配置

# 讯飞星火API配置（需要申请）
SPARK_API_KEY=your_spark_api_key_here
SPARK_API_SECRET=your_spark_api_secret_here

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 服务配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=true

# 数据文件路径
DATA_DIR=../data

# 缓存配置
CACHE_TTL_HOURS=24
SEARCH_CACHE_TTL_HOURS=12